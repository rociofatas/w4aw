{% extends "base.jinja2" %}
{% block content %}

<div class="page-header">
    <h1>A Board of Wishes</h1>
</div>
<div class="list-group">
    {% for wish in wishes %}
        <a href="{{ url_for('wishes.wish_page', wish_id=wish._id) }}" class="list-group-item">
            <h4 class="list-group-item-title">{{ wish.wish }}</h4>
            <h5 class="list-group-item-title" style="text-transform:uppercase;">{{ wish.wish_keyword }}</h5>
            <p class="list-group-item-text">{{ wish.user_email }}</p>

        </a>
    {% endfor %}
</div>
    <a class="btn btn-success" href="{{ url_for('wishes.new_wish') }}">
        <span class="glyphicon glyphicon-plus"></span>Add A Wish
    </a>
{% endblock %}
