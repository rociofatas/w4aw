{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Add A New Wish</h1>
    </div>
    <div class="form">
        <form method="post">
            <div class="form-group">
                <label for="wish_keyword">Wish Keyword</label>
                <input type="text" class="form-control" id="wish_keyword" name="wish_keyword" placeholder="wish_Keyword">
            </div>

            <div class="form-group">
                <label for="description">Wish Description</label>
                <input type="text" class="form-control" id="description" name="description" placeholder="your description here"
                       aria-describedby="descriptionBlock">
                <span id="descriptionBlock" class="help-block">Your wish will be added to our Database</span>
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
{% endblock %}
