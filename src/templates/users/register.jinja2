{% extends "base.jinja2" %}
{% block content %}
    <div class="form-size">
       <form action="{{ url_for('users.register_user') }}" method="post">
           <div class="form-group">
               <label for="email">Email address</label>
               <input type="email" class="form-control" id="email" name="email" placeholder="Email">
           </div>
           <div class="form-group">
               <label for="password">Password</label>
               <input type="password" class="form-control" id="password" name="password" placeholder="Password">
           </div>
           <div class="form-group">
               <label for="wish">Complete the sentence: I wish for a world...</label>
               <input type="text" class="form-control" id="wish" name="wish" placeholder="Your Wish For A Better World">
           </div>
           <div class="form-group">
               <label for="wish_keyword">Choose a keyword for your wish</label>
               <input type="text" class="form-control" id="wish_keyword" name="wish_keyword" placeholder="Only one word, your wish's keyword">
           </div>
           <button type="submit" class="btn btn-default">Sign up</button>
       </form>
    </div>
{% endblock %}
